<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Krokomierz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="30sp"
                android:gravity="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Aktualna liczba krokÃ³w:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/stepsView" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Zaloguj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/logowanieButton" android:layout_weight="1"/>
            <TextView
                    android:text="Niezalogowany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/loginStatus" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="Statystyki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/statystykiButton"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>