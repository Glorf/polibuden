<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Statistics">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Moje statystyki:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="32sp"
                android:gravity="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Liczba kroków:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/scoreView" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Pozycja w rankingu:"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/positionView" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Liczba kroków do wyższej pozycji:"
                    android:layout_width="138dp"
                    android:layout_height="match_parent" android:id="@+id/textView9" android:layout_weight="1"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nextView" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/backupButton" android:layout_weight="1"
                    android:enabled="false"/>
            <Button
                    android:text="Restore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/restoreButton" android:layout_weight="1"
                    android:enabled="false"/>
        </LinearLayout>
        <Button
                android:text="Zamknij"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/closeButton"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>